<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusteriFragment">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/btnEkle"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginStart="225dp"
        android:layout_marginTop="287dp"
        android:text="Ekle"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnListele"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginStart="225dp"
        android:layout_marginTop="345dp"
        android:text="Listele"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ad"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="200dp"
        android:hint="Adı Soyad Giriniz" />

    <EditText
        android:id="@+id/numara"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="258dp"
        android:hint="Numara Giriniz"
        android:inputType="phone" />


    <EditText
        android:id="@+id/adres"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:ems="10"
        android:gravity="start|top"
        android:layout_marginStart="0dp"
        android:layout_marginTop="316dp"
        android:hint="Adres Giriniz"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/alınan"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="410dp"
        android:ems="10"
        android:hint="Alınan Ekmek"
       />





</FrameLayout>

